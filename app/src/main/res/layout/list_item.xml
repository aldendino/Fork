<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/listItemPadding"
        android:paddingBottom="@dimen/listItemPadding"
        android:paddingLeft="@dimen/listItemPadding"
        android:paddingRight="@dimen/listItemPaddingBetween"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/index"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="@dimen/listItemPadding"
        android:paddingBottom="@dimen/listItemPadding"
        android:paddingLeft="@dimen/listItemPaddingBetween"
        android:paddingRight="@dimen/listItemPaddingBetween"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/listItemPadding"
        android:paddingBottom="@dimen/listItemPadding"
        android:paddingLeft="@dimen/listItemPaddingBetween"
        android:paddingRight="@dimen/listItemPadding"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/number"/>

</LinearLayout>